                    <BoxView BackgroundColor="LightGray" Grid.Row="1" Grid.Column="5" WidthRequest="50" HeightRequest="50" Margin="20, 5, -15, 0"></BoxView>
                    <BoxView BackgroundColor="LightGray" Grid.Row="1" Grid.Column="6" WidthRequest="50" HeightRequest="50" Margin="20, 5, -15, 0"></BoxView>
